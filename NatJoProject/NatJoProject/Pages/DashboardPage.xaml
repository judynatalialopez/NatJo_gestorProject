<Page x:Class="NatJoProject.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatJoProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Grid>
        <ScrollViewer Grid.Row="1" Padding="20" Margin="39,37,39,37">
            <StackPanel Orientation="Vertical">
                <!-- Sprint 1 -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Sprint 1 - Junio 2025" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                    <ItemsControl>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="FrameworkElement.Margin" Value="0,10,0,0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.Items>
                            <Border Background="White" Padding="10" CornerRadius="5" BorderBrush="#CCC" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Tarea: Diseño del login" FontWeight="Bold"/>
                                    <TextBlock Text="Responsable: Ana López" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" Padding="10" CornerRadius="5" BorderBrush="#CCC" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Tarea: API de autenticación" FontWeight="Bold"/>
                                    <TextBlock Text="Responsable: Carlos Díaz" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </ItemsControl.Items>
                    </ItemsControl>
                </StackPanel>

                <!-- Sprint 2 -->
                <StackPanel>
                    <TextBlock Text="Sprint 2 - Julio 2025" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                    <ItemsControl>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="FrameworkElement.Margin" Value="0,10,0,0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.Items>
                            <Border Background="White" Padding="10" CornerRadius="5" BorderBrush="#CCC" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Tarea: Dashboard del usuario" FontWeight="Bold"/>
                                    <TextBlock Text="Responsable: Marta Ruiz" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </ItemsControl.Items>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
