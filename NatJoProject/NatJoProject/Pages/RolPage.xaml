<Page x:Class="NatJoProject.Pages.RolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:NatJoProject.Pages"
      Title="Roles" Height="370" Width="669">


    <Grid Background="AliceBlue" Margin="0,0,-60,0">
        <DataGrid x:Name="dgRoles"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="20,111,20,95">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RolId}" Width="110"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Insertar Rol"
    Background="#BCA8FF"
    Foreground="White"
    FontWeight="Bold"
    Height="40"
    BorderThickness="0"
    Cursor="Hand"
    Click="btnAgregarRol" Margin="20,48,574,282"/>

        <Button Content="Editar Rol"
    Background="#FFB2A8"
    Foreground="White"
    FontWeight="Bold"
    Height="40"
    BorderThickness="0"
    Cursor="Hand"
    Click="btnEditarRol" Margin="170,48,427,282"/>

        <Button Content="Elimonar Rol"
            Background="#FE6A38"
            Foreground="White"
            FontWeight="Bold"
            Height="40"
            BorderThickness="0"
            Cursor="Hand"
            Click="btnEliminar" Margin="335,48,262,282"/>

    </Grid>


</Page>
