<Page x:Class="NatJoProject.Pages.TeamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatJoProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeamPage">

    <Grid Background="#F5F6FA">
        <!-- Mensaje de "sin proyectos" -->
        <TextBlock x:Name="txtSinTeams"
   Text="Aún no estas en un equipo"
   FontSize="20"
   FontWeight="Bold"
   Foreground="Gray"
   HorizontalAlignment="Center"
   VerticalAlignment="Center"
   Visibility="Collapsed"/>

        <!-- Contenedor de proyectos -->
        <ScrollViewer Margin="20">
            <WrapPanel x:Name="wrapTeams"
       HorizontalAlignment="Center"
       VerticalAlignment="Top"
       ItemWidth="300"
       ItemHeight="180"
       Orientation="Horizontal"
       Margin="0,20,0,20"/>
        </ScrollViewer>
    </Grid>
</Page>
