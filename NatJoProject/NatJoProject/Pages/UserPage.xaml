<Page x:Class="NatJoProject.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Usuarios" Height="370" Width="669">

    <Grid Background="AliceBlue" Margin="0,0,-72,0">

        <!-- Scroll horizontal y vertical para DataGrid -->
        <ScrollViewer Margin="20,111,20,95"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgUsers"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      MinHeight="200"
                      ScrollViewer.HorizontalScrollBarVisibility="Visible"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Width="1000"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    
                    <DataGridTextColumn Header="Documento" Binding="{Binding Id}" Width="150"/>
                    <DataGridTextColumn Header="Primer Nombre" Binding="{Binding Pnombre}" Width="150"/>
                    <DataGridTextColumn Header="Segundo Nombre" Binding="{Binding Snombre}" Width="150"/>
                    <DataGridTextColumn Header="Primer Apellido" Binding="{Binding Papellido}" Width="150"/>
                    <DataGridTextColumn Header="Segundo Apellido" Binding="{Binding Sapellido}" Width="150"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="150"/>
                    <DataGridTextColumn Header="Fecha Nacimiento" Binding="{Binding FechaNacimiento, StringFormat=d}" Width="150"/>
                    
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <!-- Botones -->

        <Button Content="Eliminar Usuario"
                Background="#FE6A38"
                Foreground="White"
                FontWeight="Bold"
                Height="40"
                BorderThickness="0"
                Cursor="Hand"
                Click="btnEliminarUsuario"
                Margin="20,50,576,280"/>
    </Grid>
</Page>
