<Window x:Class="NatJoProject.Views.Administradores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatJoProject.Views"
        mc:Ignorable="d"
        Title="Administradores" Height="488" Width="1071">

    <Window.Resources>
        <!-- Tu estilo original intacto -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,5,5,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="18" Margin="5,0,10,0"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2e3d4f"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- CONTENIDO VISUAL ORGANIZADO -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- menú -->
            <ColumnDefinition Width="*"/>
            <!-- contenido -->
        </Grid.ColumnDefinitions>

        <!-- Panel lateral -->
        <StackPanel Background="#FF003366" Grid.Column="0">
            <StackPanel Margin="10" HorizontalAlignment="Center">
                <TextBlock Text="Administradores" Foreground="White"
                           FontWeight="Bold" FontSize="20" Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel>
                <Button Content="Gestionar Roles"
                        Click="Button_Click"
                        Foreground="White"
                        Width="161" Height="40"
                        Background="#FF003366" FontSize="14" FontWeight="Bold"/>

                <Button Content="Gestionar Usuarios"
                    Click="Button_Users"
                    Foreground="White"
                    Width="161" Height="40"
                    Background="#FF003366" FontSize="14" FontWeight="Bold"/>

                <Button Content="Insertar Paises"
                        Click="Button_Paises"
                        Foreground="White"
                        Width="160" Height="40"
                        Background="#FF003366" FontSize="14" FontWeight="Bold"/>

                <Button Content="Insertar Estados Tareas"
                        Click="Button_Estados_Treas"
                        Foreground="White"
                        Width="160" Height="40"
                        Background="#FF003366" FontSize="14" FontWeight="Bold"/>

                <Button Content="Insertar Ciudades"
                        Click="Button_Ciudades"
                        Foreground="White"
                        Width="160" Height="40"
                        Background="#FF003366" FontSize="14" FontWeight="Bold"/>

                <Button Content="Insertar Sexos"
                        Click="Button_Sexos"
                        Foreground="White"
                        Width="160" Height="40"
                        Background="#FF003366" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <!-- Frame de navegación -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="26,52,25,52" Grid.Column="1"/>

    </Grid>
</Window>
