 ﻿<Window x:Class="NatJoProject.Views.CrearProyecto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatJoProject.Views"
        mc:Ignorable="d"
        Title="CrearProyecto" Height="682" Width="800">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
        BorderThickness="2"
        Opacity="0.95" RenderTransformOrigin="0.5,0.517" Height="666" VerticalAlignment="Center">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Usa un Canvas para posicionar libremente -->
            <Canvas>
                <!-- Título -->
                <TextBlock Text="Crear proyecto"
                   Foreground="White"
                   FontSize="25"
                   FontWeight="Medium"
                   FontFamily="Montserrat"
                   Canvas.Left="335"
                   Canvas.Top="19" />

                <!-- Primer Nombre -->
                <TextBlock Text="Nombre"
                   Foreground="DarkGray"
                   FontSize="12"
                   FontWeight="Medium"
                   FontFamily="Montserrat"
                   Canvas.Left="276"
                   Canvas.Top="90" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBox x:Name="txtNombre"
                 FontSize="13"
                 FontWeight="Medium"
                 FontFamily="Montserrat"
                 Foreground="Black"
                 CaretBrush="Black"
                 BorderBrush="Black"
                 BorderThickness="0,0,0,2"
                 Width="268"
                 Height="28"
                 VerticalContentAlignment="Center"
                 Padding="10,0,0,0"
                 Canvas.Left="276"
                 Canvas.Top="122" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <!-- Segundo Nombre -->

                <!-- Botón -->
                <Button x:Name="btnRegistrarCiudad"
                Content="Crear proyecto"
                Foreground="White"
                FontSize="12"
                FontFamily="Montserrat"
                Width="150"
                Height="40"
                BorderThickness="0"
                Cursor="Hand"
                Canvas.Left="335"
                Canvas.Top="564"
                Click="InsertarProyecto_Click" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                            Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock Text="Descripcion"
            Foreground="DarkGray"
            FontSize="12"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Canvas.Left="275" Canvas.Top="188" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.456,0.765" />
                <TextBox x:Name="txtDescripcion"
            FontSize="13"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            Width="329"
            Height="81"
            VerticalContentAlignment="Center"
            Padding="10,0,0,0"
            Canvas.Left="275" Canvas.Top="221" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBlock Text="Fecha inicio"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="276" Canvas.Top="345" RenderTransformOrigin="0.456,0.765" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBlock Text="Fecha Termincion"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="276" Canvas.Top="442" RenderTransformOrigin="0.456,0.765" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <DatePicker x:Name="txtFechaInicio"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="200"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="270" Canvas.Top="378"
                    SelectedDateFormat="Short" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <DatePicker x:Name="txtFechaFinal"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="200"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="270" Canvas.Top="478"
                    SelectedDateFormat="Short" HorizontalAlignment="Left" VerticalAlignment="Top" />
            </Canvas>
        </Border>
    </Border>

</Window>