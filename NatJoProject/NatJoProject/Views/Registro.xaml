<Window x:Class="NatJoProject.ViewsPrueba.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        Title="Registro" Height="835" Width="800">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
                BorderThickness="2"
                Opacity="0.95" Height="883" VerticalAlignment="Top">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Usa un Canvas para posicionar libremente -->
            <Canvas>
                <!-- Título -->
                <TextBlock Text="Registrarse"
                           Foreground="White"
                           FontSize="25"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Canvas.Left="335"
                           Canvas.Top="19" />

                <!-- Primer Nombre -->
                <TextBlock Text="Primer Nombre"
                           Foreground="DarkGray"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Canvas.Left="164"
                           Canvas.Top="185" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBox x:Name="txtPrimerNombre"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Foreground="Black"
                         CaretBrush="Black"
                         BorderBrush="Black"
                         BorderThickness="0,0,0,2"
                         Width="200"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Padding="10,0,0,0"
                         Canvas.Left="163"
                         Canvas.Top="211" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <!-- Segundo Nombre -->
                <TextBlock Text="Segundo Nombre"
                           Foreground="DarkGray"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Canvas.Left="434"
                           Canvas.Top="181" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBox x:Name="txtSegundoNombre"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Foreground="Black"
                         CaretBrush="Black"
                         BorderBrush="Black"
                         BorderThickness="0,0,0,2"
                         Width="194"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Padding="10,0,0,0"
                         Canvas.Left="437"
                         Canvas.Top="211" HorizontalAlignment="Center" VerticalAlignment="Top" />

                <!-- Botón -->
                <Button x:Name="btnRegistrar"
                        Content="Registrar"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Width="150"
                        Height="40"
                        BorderThickness="0"
                        Cursor="Hand"
                        Canvas.Left="213"
                        Canvas.Top="714"
                        Click="Registrarse_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock Text="Primer apellido"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="163" Canvas.Top="258" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBox x:Name="txtPrimerApellido"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="200"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="163" Canvas.Top="288" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBlock Text="Segundo Apellido"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="437"
                    Canvas.Top="258" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBox x:Name="txtSegundoApellido"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="194"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="437"
                    Canvas.Top="288" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="No. Documento"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="163" Canvas.Top="95" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBox x:Name="txtDocumentoID"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="200"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="163" Canvas.Top="125" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="Tipo Documento"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="434"
                    Canvas.Top="95" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBox x:Name="txtTipoDoc"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="194"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="437"
                    Canvas.Top="125" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="Ciudad"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="163" Canvas.Top="340" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <ComboBox x:Name="cbCiudad"
                     FontSize="13"
                     FontWeight="Medium"
                     FontFamily="Montserrat"
                     Foreground="Black"
                     BorderBrush="Black"
                     BorderThickness="0,0,0,2"
                     Width="200"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Padding="10,0,0,0"
                     Canvas.Left="163" Canvas.Top="370"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top" />
                <TextBlock Text="Fecha nacimiento"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="163" Canvas.Top="425" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <DatePicker x:Name="txtFechaNacimiento"
                FontSize="13"
                FontWeight="Medium"
                FontFamily="Montserrat"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="0,0,0,2"
                Width="200"
                Height="28"
                VerticalContentAlignment="Center"
                Padding="10,0,0,0"
                Canvas.Left="155" Canvas.Top="455"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                SelectedDateFormat="Short" />
                <TextBlock Text="Telefono"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="437"
                    Canvas.Top="425" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBox x:Name="txtTelefono"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="194"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="437"
                    Canvas.Top="455" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="Email"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="163" Canvas.Top="502" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBox x:Name="txtEmail"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="200"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="163" Canvas.Top="532" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="Contraseña"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="437"
                    Canvas.Top="502" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <PasswordBox x:Name="txtContraseña"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="194"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="437"
                    Canvas.Top="532" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="Direccion"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="163" Canvas.Top="572" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBox x:Name="txtDireccion"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,2"
                    Width="468"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Canvas.Left="163" Canvas.Top="602" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Text="Sexo"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Canvas.Left="442" Canvas.Top="340" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <ComboBox x:Name="cbSexo"
                  FontSize="13"
                  FontWeight="Medium"
                  FontFamily="Montserrat"
                  Foreground="Black"
                  BorderBrush="Black"
                  BorderThickness="0,0,0,2"
                  Width="192"
                  Height="28"
                  Padding="10,0,0,0"
                  Canvas.Left="442"
                  Canvas.Top="370"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top" />
                <Button x:Name="btnRegistrar_Copiar"
                    Content="Cancelar"
                    Foreground="White"
                    FontSize="12"
                    FontFamily="Montserrat"
                    Width="150"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"
                    Canvas.Left="455"
                    Canvas.Top="714"
                    Click="btnCancelar" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border CornerRadius="20"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Canvas>
        </Border>
    </Border>
</Window>
