<Window x:Class="NatJoProject.ViewsPrueba.EliminarRoles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eliminar Rol" Height="230" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Seleccione un rol para eliminar:" 
                   FontWeight="SemiBold" FontSize="15" 
                   Margin="0,0,0,6"/>

        <!-- ComboBox de roles -->
        <ComboBox x:Name="cmbRoles" Grid.Row="1" Height="32" 
                  DisplayMemberPath="Descripcion" SelectedValuePath="RolId"
                  Margin="0,0,0,8"
                  Padding="5"
                  FontSize="13"/>

        <!-- Mensaje de error o info -->
        <TextBlock x:Name="txtMensaje" Grid.Row="2" Foreground="Red" 
                   FontSize="12" Margin="0,0,0,8" TextWrapping="Wrap" />

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="EliminarButton"
                    Content="Eliminar"
                    Click="Eliminar_Click"
                    Width="100" Height="35"
                    Margin="0,0,10,0"
                    Background="#d9534f" Foreground="White"
                    FontWeight="Bold" Cursor="Hand"/>

            <Button Content="Cancelar"
                    Click="Cancelar_Click"
                    Width="100" Height="35"
                    Background="#6c757d" Foreground="White"
                    FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
