<Window x:Class="NatJoProject.ViewsPrueba.Estados_Task"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatJoProject.ViewsPrueba"
        mc:Ignorable="d"
        Title="Estados_Task" Height="450" Width="800">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
            BorderThickness="2"
            Opacity="0.95" RenderTransformOrigin="0.518,0.643" Margin="0,0,0,-449">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Usa un Canvas para posicionar libremente -->
            <Canvas>
                <!-- Título -->
                <TextBlock Text="Registro Estados Tareas"
                       Foreground="White"
                       FontSize="25"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Canvas.Left="335"
                       Canvas.Top="19" />

                <!-- Primer Nombre -->
                <TextBlock Text="Descripcion"
                       Foreground="DarkGray"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Canvas.Left="164"
                       Canvas.Top="185" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBox x:Name="txtDescripcion"
                     FontSize="13"
                     FontWeight="Medium"
                     FontFamily="Montserrat"
                     Foreground="Black"
                     CaretBrush="Black"
                     BorderBrush="Black"
                     BorderThickness="0,0,0,2"
                     Width="200"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Padding="10,0,0,0"
                     Canvas.Left="163"
                     Canvas.Top="211"  />

                <!-- Segundo Nombre -->

                <!-- Botón -->
                <Button x:Name="btnRegistrar"
                    Content="Registrar"
                    Foreground="White"
                    FontSize="12"
                    FontFamily="Montserrat"
                    Width="150"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"
                    Canvas.Left="305"
                    Canvas.Top="306"
                    Click="InsertEstado" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Canvas>
        </Border>
    </Border>
</Window>
