<Window x:Class="NatJoProject.ViewsPrueba.ProyetosPrueba"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatJoProject.ViewsPrueba"
        mc:Ignorable="d"
        Title="ProyetosPrueba" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid x:Name="ProjectsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProjectId}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="2*"/>
                <DataGridTextColumn Header="Fecha Inicio" Binding="{Binding FechaInicio, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Fecha Terminación" Binding="{Binding FechaTerminacion, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Team" Binding="{Binding ProyectoNombre}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Cargar Proyectos" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Height="35" Margin="0,0,0,10" Click="LoadProjects_Click"/>
    </Grid>
</Window>
